{{!< default}}

{{#post}}
  <header class="post-header">
      <h1 class="post-title">{{title}}</h1>
      <time datetime="{{published_at}}">{{date format="DD MMM YYYY"}}</time>
  </header>

  <div class="post-body {{post_class}}">
      {{{content}}}

      {{#if tags}}
          <p class="post-tags">
              <span class="headline">Tagged:</span>
              {{tags}}
          </p>
      {{/if}}
  </div>

  <footer class="post-footer">
    
  </footer>
{{/post}}
